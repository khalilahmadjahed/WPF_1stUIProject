<Window x:Class="WPF_1st_UI_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_1st_UI_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="400">

    <Border Padding="10">
        <StackPanel>
            <!--Buttons-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Apply" Margin="0 0 10 0"/>
                <Button Grid.Column="1" Content="Reset" />
                <Button Grid.Column="2" Content="Refresh" Margin="10 0 0 0"/>
            </Grid>
        </StackPanel>
    </Border>

    
        
</Window>
